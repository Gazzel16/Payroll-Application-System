<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDBDBD"
    tools:context=".EmployeeDashboardActivity">

    <LinearLayout
        android:id="@+id/dashboardLayout"
        android:layout_width="299dp"
        android:layout_height="341dp"
        android:layout_margin="16dp"
        android:background="#ffffff"
        android:elevation="6dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.762">

        <!-- Add Employee Button -->
        <Button
            android:id="@+id/addEmployeeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#4CAF50"
            android:padding="18dp"

            android:text="Add Employee"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <!-- View Employees Button -->

        <!-- Pay Employee Button -->
        <Button
            android:id="@+id/viewEmployeesBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#2196F3"
            android:padding="18dp"
            android:text="Edit Employees"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/payEmployeeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#FFC107"
            android:padding="18dp"
            android:text="Pay Employee"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <!-- Generate Pay Slip Button -->
        <Button
            android:id="@+id/viewPaidEmployeesBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#9C27B0"
            android:padding="18dp"
            android:text="View Paid Employees"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/salaryCalculatorBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#757575"
            android:padding="18dp"
            android:text="Salary Calculator"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="331dp"
        android:layout_height="192dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035"
        app:srcCompat="@drawable/bg" />


</androidx.constraintlayout.widget.ConstraintLayout>
